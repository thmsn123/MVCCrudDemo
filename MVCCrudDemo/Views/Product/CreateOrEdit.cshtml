@model MVCCrudDemo.Models.ProductViewModel;
@{
    ViewBag.Title = Model.ActionName;
}

<h1>@ViewBag.Title</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (Model.IsEdit)
                {
                    @Html.HiddenFor(m => m.ProductInfo.ID)
                }
            }
            <div class="form-group">
                <label asp-for="ProductInfo.Name" class="font-weight-bold"></label>
                <input asp-for="ProductInfo.Name" class="form-control" />
                <span asp-validation-for="ProductInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInfo.Specifications" class="font-weight-bold"></label>
                <textarea asp-for="ProductInfo.Specifications" style="height:200px;" class="form-control"></textarea>
                <span asp-validation-for="ProductInfo.Specifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInfo.Price" class="font-weight-bold"></label>
                <input asp-for="ProductInfo.Price" class="form-control" />
                <span asp-validation-for="ProductInfo.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
